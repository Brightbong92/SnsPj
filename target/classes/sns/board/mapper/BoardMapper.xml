<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sns.board.mapper.BoardMapper">
	<select id="selectFollow" parameterType="String" resultType="String">
		<![CDATA[
	 		SELECT FLR_EMAIL FROM FOLLOW WHERE MEM_EMAIL = #{mem_email}
	 	]]>
	</select>
	
	<select id="selectBoard" parameterType="String" resultType="Board">
		<![CDATA[
			SELECT * FROM BOARD WHERE MEM_EMAIL = #{mem_email} ORDER BY B_RDATE
		]]>
	</select>
	
	<select id="selectBoardFile" parameterType="long" resultType="Board_File">
		<![CDATA[
			SELECT * FROM BOARD_FILE WHERE B_SEQ = #{b_seq} ORDER BY BF_SEQ
		]]>
	</select>
	
	<select id="selectBoardReply" parameterType="long" resultType="Board_Reply">
		<![CDATA[
			SELECT * FROM REPLY WHERE B_SEQ #{b_seq} ORDER BY BRP_RDATE
		]]>
	</select>
	
</mapper>
